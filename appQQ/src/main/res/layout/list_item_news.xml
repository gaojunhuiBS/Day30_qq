<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/refresh_lv"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        app:contentPadding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/iv_news"
        android:src="@drawable/ic_launcher"
        android:scaleType="fitXY"
        android:layout_width="100dp"
        android:layout_height="100dp" />
    <TextView
        android:id="@+id/tv_digest"
        android:text="tv_digest"
        android:layout_toRightOf="@+id/iv_news"
        android:layout_marginTop="10dp"
        android:layout_alignTop="@+id/iv_news"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_soucre"
        android:text="tv_soucre"
        android:layout_below="@+id/tv_ptime"
        android:layout_toRightOf="@+id/iv_news"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_ptime"
        android:text="ptime"
        android:layout_toRightOf="@+id/iv_news"
        android:layout_below="@+id/tv_digest"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>